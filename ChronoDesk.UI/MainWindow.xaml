<Window x:Class="ChronoDesk.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ChronoDesk.UI.ViewModels"
        xmlns:views="clr-namespace:ChronoDesk.UI.Views"
        mc:Ignorable="d"
        Title="ChronoDesk" Height="760" Width="1180" MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Icon="icon.png"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:TimerViewModel}">
            <views:TimerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProjectListViewModel}">
            <views:ProjectListView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SummaryViewModel}">
            <views:SummaryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.RowSpan="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#252526" Offset="0"/>
                    <GradientStop Color="#1E1E1E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Margin="0,20,0,0">
                <!-- Branding -->
                <StackPanel Orientation="Horizontal" Margin="24,0,0,30">
                     <Image Source="icon.png" Width="20" Height="20" Margin="0,0,10,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                     <TextBlock Text="ChronoDesk" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Nav Items -->
                <Button Command="{Binding NavigateToTimerCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE916;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Timer" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentViewModel, Converter={StaticResource ViewModelTypeConverter}, ConverterParameter={x:Type vm:TimerViewModel}}" Value="True">
                                    <Setter Property="Background" Value="#252526"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                    <!-- In a perfect world we target the 'Indicator' border in template, but simpler: colored text/bg -->
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Command="{Binding NavigateToProjectsCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Projects" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentViewModel, Converter={StaticResource ViewModelTypeConverter}, ConverterParameter={x:Type vm:ProjectListViewModel}}" Value="True">
                                    <Setter Property="Background" Value="#252526"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Command="{Binding NavigateToSummaryCommand}">
                     <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE9F9;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Summary" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentViewModel, Converter={StaticResource ViewModelTypeConverter}, ConverterParameter={x:Type vm:SummaryViewModel}}" Value="True">
                                    <Setter Property="Background" Value="#252526"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Command="{Binding NavigateToSettingsCommand}">
                     <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentViewModel, Converter={StaticResource ViewModelTypeConverter}, ConverterParameter={x:Type vm:SettingsViewModel}}" Value="True">
                                    <Setter Property="Background" Value="#252526"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel, NotifyOnTargetUpdated=True}" Margin="30">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="0"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Binding.TargetUpdated">
                            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</Window>
