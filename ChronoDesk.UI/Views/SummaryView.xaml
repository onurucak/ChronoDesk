<UserControl x:Class="ChronoDesk.UI.Views.SummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Summary &amp; Reports" FontSize="28" FontWeight="Bold"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <DatePicker SelectedDate="{Binding StartDate}" Margin="0,0,10,0" VerticalContentAlignment="Center" Padding="5"/>
                <TextBlock Text="-" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                <DatePicker SelectedDate="{Binding EndDate}" Margin="0,0,20,0" VerticalContentAlignment="Center" Padding="5"/>
                
                <Button Command="{Binding RefreshCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0">
                     <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding ExportCommand}" Style="{StaticResource PrimaryButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE78C;" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Text="Export CSV"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Stats Cards (Simulated) -->
        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Style="{StaticResource CardStyle}" Margin="0,0,10,0" Padding="20">
                <StackPanel>
                    <TextBlock Text="Total Projects" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14"/>
                    <TextBlock Text="{Binding ProjectSummaries.Count}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
             
             <!-- Placeholder stats -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,10,0" Padding="20">
                 <StackPanel>
                    <TextBlock Text="Active Period" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14"/>
                    <TextBlock Text="7 Days" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="10,0,0,0" Padding="20">
                 <StackPanel>
                    <TextBlock Text="Status" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14"/>
                    <TextBlock Text="Productive" FontSize="32" FontWeight="Bold" Margin="0,10,0,0" Foreground="{StaticResource SuccessBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Project Breakdown & Recent Sessions -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Project Breakdown -->
            <Border Style="{StaticResource CardStyle}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="20">
                        <TextBlock Text="Project Breakdown" FontWeight="SemiBold" FontSize="16"/>
                    </Border>
                
                    <ListView Grid.Row="1" ItemsSource="{Binding ProjectSummaries}" BorderThickness="0" Background="Transparent" Margin="0,10">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="20,10"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2D2D30"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding ProjectName}" FontSize="15" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding TotalDuration}" FontFamily="Consolas" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                Visibility="{Binding IsProjectSummariesEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                         <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="40" Foreground="{StaticResource BorderBrush}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                         <TextBlock Text="No data for selected period" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" Foreground="{StaticResource DangerBrush}" 
                               Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20"/>
                </Grid>
            </Border>

            <!-- Recent Sessions -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="0" Margin="20,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="20">
                        <TextBlock Text="Recent Sessions" FontWeight="SemiBold" FontSize="16"/>
                    </Border>

                    <ListView Grid.Row="1" ItemsSource="{Binding RecentSessions}" BorderThickness="0" Background="Transparent" Margin="0,10">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="20,12"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2D2D30"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding ProjectName}" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Duration}" FontFamily="Consolas" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </Grid>
                                    
                                    <TextBlock Grid.Row="1" Text="{Binding Notes}" FontSize="13" Foreground="#DDDDDD" TextWrapping="Wrap" 
                                               Visibility="{Binding Notes, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Empty State for Recents -->
                     <TextBlock Grid.Row="1" Text="No recent activity" Foreground="{StaticResource TextSecondaryBrush}" 
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding IsRecentSessionsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
